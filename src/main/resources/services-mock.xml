<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd
           ">
   <import resource="daos-mock.xml"/>

   <context:annotation-config />
   
   <context:component-scan
      base-package="com.tysanclan.site.projectewok.beans.impl" />
      
	<bean id="eventBroker" class="com.tysanclan.site.projectewok.beans.mock.MockEventBroker" />      
      
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="mail.tysanclan.com"/>
	</bean>
	
	<bean id="galleryService" class="com.tysanclan.site.projectewok.beans.impl.GalleryServiceImpl" autowire="byType" scope="request">
		<constructor-arg>
			<value>/gallery</value>
		</constructor-arg>
		<constructor-arg>
			<value>/tmp/gallery</value>
		</constructor-arg>
		<constructor-arg>
			<value>/</value>
		</constructor-arg>
	</bean>
</beans>
